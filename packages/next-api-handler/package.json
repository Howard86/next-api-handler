{
  "name": "next-api-handler",
  "version": "0.4.7",
  "description": "lightweight nextjs api handler wrapper, portable & configurable for serverless environment",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "dist/index.js",
  "type": "module",
  "sideEffects": false,
  "repository": "https://github.com/Howard86/next-api-handler",
  "license": "MIT",
  "keywords": [
    "next",
    "api",
    "restful",
    "middleware",
    "express",
    "serverless"
  ],
  "scripts": {
    "clean": "rm -rf .turbo node_modules build dist coverage",
    "build": "tsup",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write --list-different",
    "fix:lint": "eslint src --ext .ts --fix",
    "test": "run-s test:*",
    "lint": "TIMING=1 eslint src --ext .ts",
    "test:lint": "eslint src --ext .ts",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test:spelling": "cspell \"{README.md,.github/*.md,src/**/*.ts}\"",
    "test:unit": "jest --silent --coverage",
    "watch": "run-p watch:*",
    "watch:build": "tsup --watch",
    "watch:test": "jest --watch",
    "cov": "run-s cov:check cov:open",
    "cov:check": "jest --coverage --coverageReporters=lcov",
    "cov:send": "run-s cov:check && codecov",
    "cov:open": "open-cli coverage/lcov-report/index.html",
    "doc": "run-s doc:html && open-cli build/docs/index.html",
    "doc:html": "typedoc src/ --exclude **/*.spec.ts --out build/docs",
    "doc:json": "typedoc src/ --exclude **/*.spec.ts --json build/docs/typedoc.json",
    "doc:publish": "gh-pages -m \"[ci skip] Updates\" -d build/docs",
    "release": "standard-version",
    "reset-hard": "git clean -dfx && git reset --hard && pnpm i",
    "type-check": "tsc --noEmit",
    "prepare-release": "run-s reset-hard build test cov:check doc:html doc:publish"
  },
  "engines": {
    "node": ">=14"
  },
  "devDependencies": {
    "@types/jest": "^29.4.3",
    "@types/node": "^18.15.3",
    "codecov": "^3.8.3",
    "eslint-config-custom": "workspace:*",
    "gh-pages": "^5.0.0",
    "jest": "^29.5.0",
    "jest-extended": "^3.2.4",
    "next": "^13.2.4",
    "next-test-api-route-handler": "^3.1.8",
    "npm-run-all": "^4.1.5",
    "open-cli": "^7.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.0.5",
    "tsconfig": "workspace:*",
    "tsup": "^6.6.3",
    "typedoc": "^0.23.26",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "peerDependencies": {
    "next": ">= 9"
  }
}
