{
  "name": "next-api-handler",
  "version": "0.4.6-alpha.1",
  "description": "lightweight nextjs api handler wrapper, portable & configurable for serverless environment",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "dist/index.js",
  "repository": "https://github.com/Howard86/next-api-handler",
  "license": "MIT",
  "keywords": [
    "next",
    "api",
    "restful",
    "middleware",
    "express",
    "serverless"
  ],
  "scripts": {
    "clean": "rm -rf .turbo node_modules build coverage .nyc_output",
    "build-tsup": "tsup src/index.ts",
    "test-jest": "jest src/tests",
    "build": "tsup src/index.ts",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write --list-different",
    "fix:lint": "eslint src --ext .ts --fix",
    "test": "run-s test:*",
    "lint": "TIMING=1 eslint src --ext .ts",
    "test:lint": "eslint src --ext .ts",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test:spelling": "cspell \"{README.md,.github/*.md,src/**/*.ts}\"",
    "test:unit": "jest --silent --coverage",
    "watch": "run-p watch:*",
    "watch:build": "tsup --watch src/index.ts",
    "watch:test": "jest --watch",
    "cov": "run-s cov:lcov cov:open",
    "cov:lcov": "jest --coverage --coverageReporters=lcov",
    "cov:send": "run-s cov:lcov && codecov",
    "cov:open": "open-cli coverage/lcov-report/index.html",
    "doc": "run-s doc:html && open-cli build/docs/index.html",
    "doc:html": "typedoc src/ --exclude **/*.spec.ts --out build/docs",
    "doc:json": "typedoc src/ --exclude **/*.spec.ts --json build/docs/typedoc.json",
    "doc:publish": "gh-pages -m \"[ci skip] Updates\" -d build/docs",
    "release": "standard-version",
    "reset-hard": "git clean -dfx && git reset --hard && pnpm i",
    "type-check": "tsc --noEmit",
    "prepare-release": "run-s reset-hard build test cov:check doc:html doc:publish"
  },
  "engines": {
    "node": ">=14"
  },
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.11.9",
    "@types/sinon": "^10.0.13",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "ava": "^4.3.3",
    "codecov": "^3.8.3",
    "eslint": "^8.29.0",
    "eslint-config-custom": "workspace:*",
    "gh-pages": "^4.0.0",
    "jest": "^29.5.0",
    "jest-extended": "^3.2.4",
    "jest-mock-req-res": "^1.0.2",
    "next": "^12.3.4",
    "next-test-api-route-handler": "^3.1.8",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "open-cli": "^7.1.0",
    "react": "^17",
    "react-dom": "^17",
    "sinon": "^14.0.2",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tsconfig": "workspace:*",
    "tsup": "^6.6.3",
    "typedoc": "^0.23.20",
    "typescript": "^4.9.3"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "peerDependencies": {
    "next": ">= 9"
  }
}
