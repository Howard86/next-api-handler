{
  "name": "next-api-handler-monorepo",
  "engine": {
    "node": ">=18"
  },
  "description": "lightweight nextjs api handler wrapper, portable & configurable for serverless environment",
  "repository": "https://github.com/Howard86/next-api-handler",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:doc": "turbo run build --filter=doc",
    "build:example": "turbo run build --filter=example",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "cspell": "^8.0.0",
    "cypress": "^13.2.0",
    "eslint": "^8.49.0",
    "gh-pages": "^6.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^3.0.3",
    "turbo": "^1.10.13",
    "typescript": "^5.2.2"
  },
  "packageManager": "pnpm@8.7.0"
}
