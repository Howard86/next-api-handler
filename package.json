{
  "name": "next-api-handler-monorepo",
  "engine": {
    "node": ">=16"
  },
  "description": "lightweight nextjs api handler wrapper, portable & configurable for serverless environment",
  "repository": "https://github.com/Howard86/next-api-handler",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:doc": "turbo run build --filter=doc",
    "build:example": "turbo run build --filter=example",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "cspell": "^6.29.3",
    "cypress": "^12.8.0",
    "eslint": "^8.36.0",
    "gh-pages": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.8.4",
    "turbo": "^1.8.3",
    "typescript": "^4.9.5"
  }
}
